<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="jsharpe">
        <createTable tableName="plants">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="details">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="plant_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_detail_plant" references="plants(id)"/>
            </column>

            <column name="in_timestamp" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="temperature" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="humidity" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="light" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="conductivity" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>